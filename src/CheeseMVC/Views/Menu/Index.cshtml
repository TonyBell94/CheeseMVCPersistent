@model List<CheeseMVC.Models.CheeseMenu>


<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Category</td>
    </tr>
    
    @foreach (var menu in Model)
    {
        <tr>
            <td><a asp-controller="Menu" asp-action="VeiwMenu" asp-route="menu.ID">Menu</a></td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No Menus yet!</p>
}

<p><a asp-controller="Menu" asp-action="Add">Menu</a></p>